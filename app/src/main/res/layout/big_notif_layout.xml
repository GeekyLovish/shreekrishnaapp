<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:id="@+id/layout"
    android:gravity="center_vertical"
    android:background="@color/color_trans"
    >

    <FrameLayout

        android:layout_alignParentRight="true"
        android:id="@+id/fl_albumArt"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="@dimen/_100sdp"
        >

        <ImageView
            android:src="@drawable/logo_square"
            android:id="@+id/albumNotifArt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />

        <ImageView
            android:id="@+id/fadeOverlay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop" />

    </FrameLayout>

    <TextView
        android:id="@+id/title_not"
        android:includeFontPadding="false"
        android:padding="@dimen/_5sdp"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:marqueeRepeatLimit="marquee_forever"
        android:textColor="@color/white"
        android:textSize="@dimen/_12sdp"
        android:fontFamily="sans-serif"/>

    <RelativeLayout
        android:layout_below="@id/title_not"
        android:layout_toLeftOf="@id/fl_albumArt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:visibility="gone"
            android:id="@+id/ivBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/text_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:paddingTop="@dimen/_3sdp">

                <TextView
                    android:id="@+id/songTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:gravity="center"
                    android:textSize="@dimen/_13sdp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/songAlbum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="sans-serif"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/songArtist"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="sans-serif"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/prevNotifBtn"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_38sdp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_previous"/>

                <ImageView
                    android:id="@+id/pauseNotifBtn"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_pause"
                    android:visibility="gone"/>

                <ProgressBar
                    android:id="@+id/progressNotifBig"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:visibility="gone"
                    android:indeterminateTintMode="src_atop"
                    android:indeterminateTint="@android:color/white"
                    android:indeterminate="true"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_play"/>


                <ImageView
                    android:id="@+id/playNotifBtn"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_play"
                    />

                <ImageView
                    android:id="@+id/nextNotifBtn"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_38sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_next"/>

                <ImageView
                    android:layout_marginStart="@dimen/_30sdp"
                    android:id="@+id/closeNotifBtn"
                    android:layout_width="@dimen/_32sdp"
                    android:layout_height="@dimen/_38sdp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/ic_cancel"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>
