<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.raman.kumar.shrikrishan.FullScreenTextActivity"
    tools:showIn="@layout/activity_full_screen_text"
    android:background="@drawable/red_backgrounf">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/_16sdp"
        android:textColor="#f2bf14"
        android:text="Arati 1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:layout_marginLeft="@dimen/_22sdp"
        android:layout_marginRight="@dimen/_22sdp"
        android:layout_below="@+id/title"
        android:background="#f2bf14"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/title"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">




<TextView
    android:id="@+id/content"
    android:layout_below="@+id/title"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:text="Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text Text "
    android:padding="@dimen/_18sdp"
    android:textColor="#f2bf14"
    android:textSize="@dimen/_14sdp"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
